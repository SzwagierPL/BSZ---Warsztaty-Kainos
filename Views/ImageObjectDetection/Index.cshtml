@{
    ViewData["Title"] = "AI Image Detector";
    ViewData["Url"] = "/";
}
<head>
    <title> @ViewData["Title"] </title>
</head>
<body>
    <h1> @ViewData["Title"] </h1>
    <div class="container">
        <div class="row m-3 mb-5">
            <div class="col-lg-6 col-sm-12">
                <form class="border p-3">
                    <div class="row mb-2">
                        <label for="imageInputFile" class="form-label"> Input file: </label>
                        <input type="file" name="imageFile" id="imageInputFile" />
                    </div>
                    <button type="submit" class="btn btn-primary"> Send </button>
                </form>
            </div>
            <div class="col-lg-6 col-sm-12">
                wold!
            </div>
        </div>  
    </div>

    <a asp-controller="Home" asp-action="Index"> Return </a>
